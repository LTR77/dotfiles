background {
     monitor =
     path = screenshot
     blur_passes = 2
     vibrancy = 0.8
}
label {
    monitor =
    text = $TIME
    font_size = 48
    font_family = "Poppins"
    text_align = center
    color = rgb(173, 216, 230)
    position = 47%, 53%
    padding = 16
}

input-field {
    monitor =
    size = 20%, 5%
    outline_thickness = 3
    inner_color = rgba(0, 0, 0, 0.0) # no fill

    outer_color = rgba(33ccffee) rgba(00ff99ee) 45deg
    check_color=rgba(00ff99ee) rgba(ff6633ee) 120deg
    fail_color=rgba(ff6633ee) rgba(ff0066ee) 40deg

    font_color = rgb(255, 223, 0)
    fade_on_empty = false
    rounding = 15

    position = 0, -20
    halign = center
    valign = center
}
